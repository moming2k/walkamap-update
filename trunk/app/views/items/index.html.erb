<h1>Listing items</h1>
<div class="digg_pagination">
<%= will_paginate @items %>
</div>
<br/>
<table>
  <tr>
  </tr>

<% for item in @items %>
  <tr>
	  <% @item = item %>
	  <% form_for(@item) do |f| %>
    <td><%= in_place_editor_field :item, 'name' %></td>
    <td><%= in_place_editor_field :item, 'tel' %></td>
    <td><%= in_place_editor_field :item, 'address' %></td>
		<td><% link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<div class="digg_pagination">
      <div clas="page_info">
        <%= page_entries_info @items %>
      </div>
      <%= will_paginate @items, :container => false %>
    </div>
<%= link_to 'New item', new_item_path %>
